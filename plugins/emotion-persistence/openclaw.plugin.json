{
  "id": "emotion-persistence",
  "name": "Emotion Persistence",
  "version": "1.0.0",
  "description": "Advanced persistence and state management for OpenClaw emotional intelligence",
  "configSchema": {
    "type": "object",
    "properties": {
      "database_path": {
        "type": "string",
        "description": "Path to the SQLite database file",
        "default": "~/.openclaw/emotional_state.db"
      },
      "backup_enabled": {
        "type": "boolean",
        "description": "Enable automatic backups",
        "default": true
      },
      "backup_interval_hours": {
        "type": "number",
        "description": "Hours between automatic backups",
        "default": 24,
        "minimum": 1
      },
      "data_retention_days": {
        "type": "number",
        "description": "Days to retain old data",
        "default": 365,
        "minimum": 1
      },
      "compression_enabled": {
        "type": "boolean",
        "description": "Enable data compression",
        "default": true
      },
      "encryption_enabled": {
        "type": "boolean",
        "description": "Enable data encryption",
        "default": false
      }
    }
  },
  "uiHints": {
    "database_path": {
      "label": "Database Path",
      "placeholder": "~/.openclaw/emotional_state.db"
    },
    "backup_enabled": {
      "label": "Enable Backups"
    },
    "backup_interval_hours": {
      "label": "Backup Interval (hours)",
      "min": 1,
      "max": 168
    },
    "data_retention_days": {
      "label": "Data Retention (days)",
      "min": 1,
      "max": 3650
    },
    "compression_enabled": {
      "label": "Enable Compression"
    },
    "encryption_enabled": {
      "label": "Enable Encryption"
    }
  }
}
